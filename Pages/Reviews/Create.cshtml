@page
@model EventPlannerApp.Pages.Reviews.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add a review</h1>

<hr />
<div>
    <a asp-page="./Index" style="color:#3e2f38; font-weight:bolder; text-decoration:none"><i class="bi bi-arrow-90deg-right" style="color:#32262d"></i>Back to List</a>
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Review.CompanyName" class="control-label"></label>
                <input asp-for="Review.CompanyName" class="form-control" />
                <span asp-validation-for="Review.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Description" class="control-label"></label>
                <input asp-for="Review.Description" class="form-control" />
                <span asp-validation-for="Review.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.ServiceQuality" class="control-label"></label>
                <input asp-for="Review.ServiceQuality" class="form-control" />
                <span asp-validation-for="Review.ServiceQuality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.PostDate" class="control-label"></label>
                <input asp-for="Review.PostDate" class="form-control" />
                <span asp-validation-for="Review.PostDate" class="text-danger"></span>
            </div>
            <hr />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="background-color:#a48f9b; border-color:#d8cfd4; width:150px; margin:20px auto 0; border-radius:30px" />
            </div>
        </form>
    </div>
</div>

