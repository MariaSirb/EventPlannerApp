@page
@model EventPlannerApp.Pages.Menues.IndexModel

@{
    ViewData["Title"] = "Index";
}
<style>
    .icon-yellow {
        color: yellow;
    }

    .icon-green {
        color: #8A9A5B;
    }

    .icon-red {
        color: red;
    }

    .icon-pink {
        color: lightpink;
    }
</style>
<h1>Menu</h1>

<p>
    <a asp-page="Create">Add a new item in the menu</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].ItemPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].ItemImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu[0].MenuType.TypeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Menu) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemPrice)
            </td>
            <td>
             <img src="data:image/jpg;base64, @item.ItemImage" width="120px" height="120px" />
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuType.TypeName)
                </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID"><i class="bi bi-pencil-square fa-7x icon-yellow"></i></a> |
                    <a asp-page="./Details" asp-route-id="@item.ID"><i class="bi bi-clipboard-check-fill icon-green fa-10x"></i></a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID"><i class="bi bi-trash icon-red fa-10x"></i></a> |
                    <a asp-page="./Favourite" asp-route-id="@item.ID"><i class="bi bi-bookmark-heart-fill icon-pink fa-10x"></i></a>

            </td>
        </tr>
}
    </tbody>
</table>
