  <script>
   // Selectează toate elementele cu clasa "photo"
var photos = document.getElementsByClassName('photo');

// Parcurge fiecare element "photo"
for (var i = 0; i < photos.length; i++) {
  // Adaugă evenimentul de click pe fiecare imagine
  photos[i].addEventListener('click', function(event) {
    // Selectează elementul "details" asociat imaginii curente
    var details = this.querySelector('.details');
    
    // Verifică starea curentă a afișării detaliilor
    var isVisible = window.getComputedStyle(details).display === 'block';

    // Ascunde toate detaliile
    var allDetails = document.getElementsByClassName('details');
    for (var j = 0; j < allDetails.length; j++) {
      allDetails[j].style.display = 'none';
    }

    // Afisează sau ascunde detaliile în funcție de starea curentă
    details.style.display = isVisible ? 'none' : 'block';

    // Opțional: Deschide un pop-up personalizat cu detaliile și butoanele aferente
    // Aici poți adăuga codul necesar pentru a deschide un pop-up cu conținutul dorit
    // de exemplu, folosind librării de modal/modalitate, sau creând un pop-up personalizat în JavaScript
  });
}

// Ascunde detaliile atunci când se face clic în afara pop-up-ului
document.addEventListener('click', function(event) {
  var target = event.target;
  var isPhoto = target.classList.contains('photo');
  var isChildOfPhoto = target.closest('.photo');

  if (!isPhoto && !isChildOfPhoto) {
    var details = document.getElementsByClassName('details');
    for (var i = 0; i < details.length; i++) {
      details[i].style.display = 'none';
    }
  }
});
      </script>


