<div class="gallery" style="border-color:#7d5f71;">
    <div style="display: flex; flex-wrap: wrap; background-color: #7d5f71;" class="row-cols-sm-3">
        @foreach (var item in Model.Photograph)
        {
            <div class="photo">
                <img src="data:image/jpg;base64 , @item.PhotographImage" width="400px" height="300px" />
                <div class="details">
                    <h3>@Html.DisplayFor(modelItem => item.PhotographName)</h3>

                    <p>
                        <label class="my-label">Price/event (euro): </label>
                        @Html.DisplayFor(modelItem => item.PhotographPrice)
                    </p>

                    <form method="post">
                        <input type="hidden" name="PhotographID" value="@item.ID" />
                        <input type="hidden" name="IsAddedtoFav" value="@item.AddedToFav.ToString()" />
                        @if (item.AddedToFav == true)
                        {
                            @if (User.Identity.IsAuthenticated)
                            {

                                <i class="bi bi-x-circle-fill"></i> <input type="submit" value="Remove from fav" class="btn btn-primary" style="background-color:#57424f; border-color:#d8cfd4; width:170px; margin:10px auto 0; border-radius:50px">
                            }

                        }
                        else
                        { @if (User.Identity.IsAuthenticated){

                            <i class="bi bi-chat-square-heart-fill"></i> <input type="submit" value="Add to fav" class="btn btn-primary" style="background-color:#beafb8; border-color:#d8cfd4; width:120px; margin:10px auto 0; border-radius:50px">
                        }}
                    </form>

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-page="./Edit" asp-route-id="@item.ID"><i class="bi bi-pencil-square fa-7x icon-yellow"></i></a>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-page="./Delete" asp-route-id="@item.ID"><i class="bi bi-trash icon-red fa-10x"></i></a>
                    }
                </div>
            </div>
        }
    </div>
</div>


