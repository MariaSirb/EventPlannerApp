@*<h1>My events</h1>*@
<div class="about-section mb-0 mt-0" style="background-color:#705565; opacity:0.8;">
    <h2 style="font-weight:bold; color:#cbbfc6"> - My events -  </h2>
    <img align="center" src="~/image/logo.png" alt="sigla" class="sigla1" />
</div>
<br />
<p>
    @* <a asp-page="Create">Add a new event</a> | |
    <a asp-page="Index" asp-route-showFavourite="@true">Show favourite</a> | |
    <a asp-page="./Index" style="color:#3e2f38; font-weight:bolder; text-decoration:none"><i class="bi bi-arrow-90deg-right" style="color:#32262d"></i>Back to List</a>
