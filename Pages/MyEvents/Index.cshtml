@page
@model EventPlannerApp.Pages.MyEvents.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>My events</h1>

<p>
    @* <a asp-page="Create">Add a new event</a> | |
    <a asp-page="Index" asp-route-showFavourite="@true">Show favourite</a> | |
    <a asp-page="./Index" style="color:#3e2f38; font-weight:bolder; text-decoration:none"><i class="bi bi-arrow-90deg-right" style="color:#32262d"></i>Back to List</a>
    *@

    <button type="button" class="btn btn-outline-dark">
        <a class= asp-area ="" asp-page="Create">Add a new Event</a>
    </button> | |
    <button type="button" class="btn btn-outline-dark">
        <a class= asp-area ="" asp-page="Index" asp-route-showFavourite="@true">Show favourites</a>
    </button> | |
    <button type="button" class="btn btn-outline-dark">
        <a class= asp-area ="" asp-page="./Index">Back to List</a>
    </button>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MyEvent[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyEvent[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyEvent[0].Mention)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyEvent[0].EventType.EventTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyEvent[0].Location.LocationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyEvent[0].Music.DjName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyEvent[0].Photograph.PhotographName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyEvent[0].MyEventMenues)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyEvent[0].Client)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MyEventD.MyEvents)
        {
            string selectedRow = "";
            if (item.ID == Model.MyEventID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mention)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventType.EventTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location.LocationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Music.DjName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Photograph.PhotographName)
                </td>
                <td>
                    @{
                        foreach (var menu in item.MyEventMenues)
                        {
                            /* @menu.Menu.ID @:*/
                            @menu.Menu.ItemName <br />
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.FullName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID"><i class="bi bi-pencil-square fa-7x icon-yellow"></i></a> |
                    <a asp-page="./Details" asp-route-id="@item.ID"><i class="bi bi-clipboard-check-fill icon-green fa-10x"></i></a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID"><i class="bi bi-trash icon-red fa-10x"></i></a> |


                    <form method="post">
                        <input type="hidden" name="EventID" value="@item.ID" />
                        <input type="hidden" name="ClientID" value="@item.ClientID" />
                        <input type="hidden" name="IsAddedtoFav" value="@item.AddedToFav.ToString()" />
                        @if (item.AddedToFav == true)
                        {
                            <input type="submit" value="Remove from Favourite" class="btn btn-primary" style="background-color:#a48f9b; border-color:#d8cfd4; width:150px; margin:20px auto 0; border-radius:30px">
                        }
                        else
                        {
                            <input type="submit" value="Add to favourite" class="btn btn-primary" style="background-color:#a48f9b; border-color:#d8cfd4; width:150px; margin:20px auto 0; border-radius:30px">
                        }
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
